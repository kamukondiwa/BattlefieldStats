{
  "name": "Battlefield 3 Stats",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Sharing the good work being done @ http://bf3stats.com/. Discreetly keep up with Battlefield 3 stats when away from home ;)",
  "background": "background.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Click to get started."
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://localhost; object-src 'self'"
}